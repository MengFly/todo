<resources>

    <style name="AppTheme" parent="Base.AppTheme" />

    <style name="AppTheme.OverlapSystemBar" parent="Base.AppTheme" />

    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_none</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="titleTextColor">@color/color_text_main_light</item>
        <item name="android:displayOptions">showHome</item>
        <item name="android:homeAsUpIndicator">@drawable/home_as_up_indicator</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="DialogActivity" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DrawableText">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TitleTextView">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/color_text_main_dark</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="DescTextView">
        <item name="android:ellipsize">middle</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/color_text_second_dark</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="emptyView">
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!--整个应用的按钮类型-->
    <style name="btn">
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textSize">@dimen/btn_body</item>
        <item name="android:textColor">@color/color_text_main_light</item>
        <item name="android:background">@drawable/back_btn</item>
    </style>

    <!--整个应用的按钮类型-->
    <style name="btn_flat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textSize">@dimen/btn_body</item>
        <item name="android:textColor">@color/app_btn_color</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="btn_float">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="MyDialogStyle">
        <!--设置dialog的背景-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--设置windowFrame框为无-->
        <item name="android:windowFrame">@null</item>
        <!--是否有title-->
        <item name="android:windowNoTitle">true</item>
        <!--是否悬浮在Activity上面-->
        <item name="android:windowIsFloating">true</item>
        <!--是否有遮盖-->
        <item name="android:windowContentOverlay">@null</item>
        <!--背景是否模糊显示-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="dialog_title">
        <item name="android:textColor">@color/app_btn_color</item>
        <item name="android:padding">15dp</item>
        <item name="android:textSize">@dimen/toolbar_title</item>
    </style>

</resources>
