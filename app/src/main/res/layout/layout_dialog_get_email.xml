<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dialog"
    android:minHeight="400dp"
    android:orientation="vertical"
    android:padding="10dp">

    <EditText
        android:id="@+id/et_input_email_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/ic_email"
        android:hint="@string/input_email_address"
        android:inputType="textEmailAddress|textWebEmailAddress"
        android:padding="10dp" />

    <EditText
        android:id="@+id/et_input_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_title"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/ic_title"
        android:gravity="center_vertical"
        android:hint="@string/input_email_content"
        android:inputType="text"
        android:padding="10dp"
        android:textSize="12sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_show_email"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <include layout="@layout/layout_include_dialog_btn" />
</LinearLayout>