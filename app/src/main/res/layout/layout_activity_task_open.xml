<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="300dp"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_task_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="@color/color_text_main_dark"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_task_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="@color/color_text_second_dark"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_back"
        android:gravity="top"
        android:hint="这里输入要发送的邮件信息"
        android:inputType="text"
        android:minHeight="100dp"
        android:padding="5dp"
        android:textColorHint="@color/color_text_disabled_dark"
        android:textSize="14sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_add_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:drawableLeft="@drawable/ic_time_over"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/ic_time_over"
        android:drawableTint="@color/color_text_main_dark"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="当前没有设置提醒时间"
        android:textColor="@color/color_text_main_dark" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:padding="10dp">

        <Button
            android:id="@+id/btn_ok"
            style="@style/btn_flat"
            android:text="确定" />
    </LinearLayout>

</LinearLayout>