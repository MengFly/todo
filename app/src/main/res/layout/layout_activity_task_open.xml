<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:minWidth="300dp"
    android:padding="10dp"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:textColor="@color/color_text_main_dark"
        android:gravity="center"
        android:text="sgdsgds"
        android:padding="5dp"
        android:id="@+id/tv_task_title"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="gdsgdsgsd"
android:padding="5dp"
        android:id="@+id/tv_task_desc"
        android:gravity="center"
        android:textColor="@color/color_text_second_dark"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:inputType="text"
        android:id="@+id/et_content"
        android:gravity="top"
        android:padding="5dp"
        android:visibility="gone"
        android:textSize="14sp"
        android:textColorHint="@color/color_text_disabled_dark"
        android:hint="这里输入要发送的邮件信息"
        android:minHeight="100dp"
        android:background="@drawable/edit_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:padding="10dp"
        android:gravity="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_ok"
            android:text="确定"
            style="@style/btn_flat" />
    </LinearLayout>

</LinearLayout>