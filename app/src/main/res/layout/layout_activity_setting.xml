<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/layout_include_toolbar" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/DescTextView"
                    android:padding="10dp"
                    android:text="提醒设置" />

                <Switch
                    android:id="@+id/s_delete_task_tip"
                    style="@style/TextSelectItem"
                    android:text="删除任务提醒" />

                <Switch
                    android:id="@+id/s_time_too_late_tip"
                    style="@style/TextSelectItem"
                    android:text="主界面时间太晚提醒" />
            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/DescTextView"
                    android:padding="10dp"
                    android:text="安全设置" />

                <TextView
                    android:id="@+id/tv_set_pass"
                    style="@style/TextSelectItem"
                    android:text="设置密码" />

            </LinearLayout>
        </android.support.v7.widget.CardView>
