<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/rl_header"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/iv_back"
        android:scaleType="fitXY"
        android:src="@drawable/ic_back_error"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

<LinearLayout
    android:paddingBottom="5dp"
    android:layout_gravity="bottom"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <!--每日一句显示-->
    <TextView
        android:padding="10dp"
        android:id="@+id/tv_word_of_day"
        android:background="@drawable/back_one_words"
        android:layout_width="match_parent"
        android:textColor="@color/color_text_title_white"
        android:lineSpacingExtra="8dp"
        android:layout_margin="10dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginLeft="10dp"
        android:textColor="@color/back_white"
        style="@style/TitleTextView"
        android:text="当前未完成任务" />
</LinearLayout>


</FrameLayout>