<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/rl_header"
    android:layout_width="match_parent"
    android:background="@color/app_main_color"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!--任务详情-->
    <TextView
        android:id="@+id/tv_task_details"
        style="@style/TitleTextView"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:drawableRight="@drawable/ic_right"
        android:text="我的任务详情"
        android:layout_height="wrap_content" />

    <!--每日一句显示-->
    <TextView
        android:layout_below="@id/tv_task_details"
        android:id="@+id/tv_word_of_day"
        android:text="这是一条信息"
        android:background="@color/color_split_color_dark"
        android:layout_width="match_parent"
        android:textColor="@color/color_text_title_white"
        android:lineSpacingExtra="8dp"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@id/tv_word_of_day"
        style="@style/DescTextView"
        android:text="当前未完成任务" />

</RelativeLayout>