<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:padding="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_talk_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="all"
        android:focusable="false"
        android:lineSpacingExtra="8dp"
        android:textColor="@color/color_text_second_dark"
        android:textColorLink="@color/app_btn_color"
        android:textSize="14sp" />

    <com.example.todolib.view.widget.DateTextView
        android:id="@+id/tv_talk_date"
        style="@style/DescTextView"
        android:layout_gravity="end" />

</LinearLayout>