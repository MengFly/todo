<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_task_title"
                style="@style/TitleTextView"
                android:paddingBottom="0dp"
                android:text="@string/test_title" />

            <TextView
                android:id="@+id/tv_task_desc"
                style="@style/DescTextView"
                android:layout_width="match_parent"
                android:maxLines="2"
                android:paddingTop="0dp"
                android:text="@string/test_message" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_action"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/ib_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:focusable="false"
                android:maxHeight="48dp"
                android:maxWidth="48dp"
                android:minHeight="36dp"
                android:minWidth="36dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_menu" />
        </LinearLayout>
    </LinearLayout>


    <com.example.todolib.view.widget.DateTextView
        android:id="@+id/dtv_create_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="2017-07-02" />

</LinearLayout>
